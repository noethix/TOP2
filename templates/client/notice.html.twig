{% extends 'base.html.twig' %}

{% block title %}Notice Board{% endblock %}


{% block stylesheets %}

<link rel="stylesheet" href="{{asset('../public/CSS/base.css')}}">

{% endblock %}


{% block body %}

<h1 class="headers">Notice Board</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Date</th>
                <th>Photo</th>
                <th>Content</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for notice in notices %}
            <tr>
                <td>{{ notice.id }}</td>
                <td>{{ notice.Title }}</td>
                <td>{{ notice.Date ? notice.Date|date('Y-m-d') : '' }}</td>
                <td>{{ notice.Photo }}</td>
                <td>{{ notice.Content }}</td>
                <td>
                    <a href="{{ path('notice_show', {'id': notice.id}) }}">show</a>
                    <a href="{{ path('notice_edit', {'id': notice.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}