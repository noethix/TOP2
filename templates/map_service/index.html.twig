{% extends 'base.html.twig' %}

{% block title %}MapService index{% endblock %}

{% block body %}
    <h1>MapService index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Photo</th>
                <th>PostCode</th>
                <th>Comment</th>
                <th>Service</th>
                <th>Status</th>
                <th>Coordinate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for map_service in map_services %}
            <tr>
                <td>{{ map_service.id }}</td>
                <td>{{ map_service.Name }}</td>
                <td>{{ map_service.Photo }}</td>
                <td>{{ map_service.PostCode }}</td>
                <td>{{ map_service.Comment }}</td>
                <td>{{ map_service.Service }}</td>
                <td>{{ map_service.Status ? 'Yes' : 'No' }}</td>
                <td>{{ map_service.coordinate }}</td>
                <td>
                    <a href="{{ path('map_service_show', {'id': map_service.id}) }}">show</a>
                    <a href="{{ path('map_service_edit', {'id': map_service.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('map_service_new') }}">Create new</a>
{% endblock %}
